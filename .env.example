# Blotato API Configuration
# Get your API key from: https://my.blotato.com/settings/api
BLOTATO_API_KEY=<your-blotato-api-key-here>
BLOTATO_API_BASE_URL=https://api.blotato.com
BLOTATO_ACCOUNT_ID=<your-instagram-account-id-here>

# OpenRouter API (for AI background generation)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=<your-openrouter-api-key-here>
OPENROUTER_MAX_CALLS_PER_MINUTE=20

# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://postgres:password@localhost:5432/iconscout_isa?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/iconscout_isa?schema=public"

# Application Configuration
NEXT_PUBLIC_BASE_URL=<your-domain-here>
NODE_ENV=production
PORT=3000

# Cron Job Security (for Vercel Cron)
CRON_SECRET=<generate-a-secure-random-string>

# Text Overlay Configuration
DEFAULT_TEXT_OVERLAY_CONTENT="Get this exclusive premium asset for free (today only!) - link in bio"
TEXT_OVERLAY_ENABLED=true
TEXT_OVERLAY_CONCURRENCY=3

# Preview Configuration
PREVIEW_RETENTION_DAYS=30
BULK_APPROVAL_LIMIT=50

# AWS S3 Storage Configuration
# Get credentials from AWS IAM console: https://console.aws.amazon.com/iam/
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>
AWS_S3_BUCKET=<your-s3-bucket-name>

# CloudFront CDN Configuration
# After creating CloudFront distribution pointing to your S3 bucket
CLOUDFRONT_ENABLED=true
CLOUDFRONT_URL=https://<distribution-id>.cloudfront.net
CLOUDFRONT_DISTRIBUTION_DOMAIN=<distribution-id>.cloudfront.net

# Storage Mode
# Options: local (filesystem only), hybrid (dual-write during migration), s3 (S3 only)
STORAGE_MODE=local

# Temporary File Configuration
TEMP_DIR=/tmp/isa-processing
TEMP_FILE_CLEANUP_ENABLED=true
TEMP_FILE_MAX_AGE_MS=3600000

# S3 History Backup Configuration
S3_HISTORY_BACKUP_ENABLED=false
S3_HISTORY_BACKUP_SCHEDULE="0 2 * * *"
S3_HISTORY_BACKUP_RETENTION_DAYS=90

# S3 Upload Configuration
S3_UPLOAD_TIMEOUT_MS=30000
S3_UPLOAD_MAX_RETRIES=3
